    <Package>
        <Name>docker</Name>
        <RuntimeDependencies>
            <Dependency>git</Dependency>
            <Dependency>aufs-util</Dependency>
            <Dependency>sqlite</Dependency>
            <Dependency>device-mapper</Dependency>
